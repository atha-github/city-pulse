{
  "name": "CityPulse",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "iosb": "bundle exec react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "clean": "cd android &&./gradlew clean",
    "startc": "react-native start --reset-cache",
    "startd": "watchman watch-del-all && rm -f yarn.lock && rm -rf node_modules && yarn && yarn start --reset-cache",
    "odapk": "open ./android/app/build/outputs/apk/release",
    "odaab": "open ./android/app/build/outputs/bundle/release",
    "badapk": "cd android && ./gradlew assembleRelease && yarn odapk",
    "badaab": "cd android && ./gradlew bundleRelease && yarn odaab",
    "pod": "cd ios && pod install",
    "podc": "cd ios && pod install --repo-update",
    "biob": "cd ios && bundle install",
    "bpod": "cd ios && bundle exec pod install",
    "bpodc": "cd ios && bundle exec pod install --repo-update",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-firebase/app": "^23.2.0",
    "@react-native-firebase/auth": "^23.2.0",
    "@react-navigation/drawer": "^7.5.3",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "axios": "^1.10.0",
    "i18next": "^25.4.2",
    "react": "19.1.0",
    "react-i18next": "^15.7.3",
    "react-native": "0.80.1",
    "react-native-biometrics": "^3.0.1",
    "react-native-device-info": "^14.0.4",
    "react-native-gesture-handler": "^2.27.2",
    "react-native-keychain": "^10.0.0",
    "react-native-maps": "^1.25.4",
    "react-native-reanimated": "^3.19.0",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.13.1",
    "react-native-svg": "^15.12.0",
    "react-native-svg-transformer": "^1.5.1",
    "react-native-toast-message": "^2.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
